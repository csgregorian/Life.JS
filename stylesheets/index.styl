@import nib

*
	user-select none
	font-family "Droid Sans", Arial
body
	width 640px
	margin 0 auto

canvas
	background-color white
	
.generation
	text-align center
	width 320
	margin 5 160 -6 160
	
	
.button-container
	margin-top 0

.button
	margin 10 80 10 80
	width 480
	font-size 48px
	text-align center
	background-color #333333
	transition background-color 0.3s
	cursor default
	box-shadow 10px 10px 0px -2px rgba(25,25,30,0.75)
	border 1px solid black
.button:hover
	background-color #333333
	
.button:active
	background-color #000000

.button:focus
	background-color #333333

a:hover
	text-decoration none